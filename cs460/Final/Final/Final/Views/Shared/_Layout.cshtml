<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/myStyle.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Buyers", "Index", "Buyers", null, new { @class = "navLink" })</li>
                    <li>@Html.ActionLink("Sellers", "Index", "Sellers", null, new { @class = "navLink" })</li>
                    <li>@Html.ActionLink("Bids", "Index", "Bids", null, new { @class = "navLink" })</li>
                    <li>@Html.ActionLink("Items", "Index", "Items", null, new { @class = "navLink" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="overlay">

    </div>
    <div class="container body-content">

        <div class="loader" hidden></div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("CustomScripts", required: false)
</body>
</html>